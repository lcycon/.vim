#!/bin/bash
SITEURL="http://www.explosm.net"
NEXTCOMIC="/comics/15/"
MATCH=1
while [ "$MATCH" = "1" ]; do
    url=$SITEURL$NEXTCOMIC
    echo $url
    wget $url
    PIC=$(cat index.html | grep ">Next " | sed -r "s/.*daily webcomic\" src=\"(.*)\"><\/div>.*/\1/")
    NEXTCOMIC=$(cat index.html | grep ">Next " | sed -r "s/.*next\" href=\"(.*)\">Next.*/\1/")
    MATCH=$(cat index.html | grep -c ">Next ")
    echo $PIC
    echo $NEXTCOMIC
    wget $PIC
    rm index.html
done
