#!/user/bin/env ruby

class MegaGreeter
    attr_accessor :name

    # Create the object
    def initialize(name = "World")
        @name = name
    end

    # Say hi to everybody
    def say_hi
        if @names.nil?
            puts "..."
        
            # @names is a list of some kind, iterate!
            @names.each do |name|
                puts "Hello #{name}!"
            end
        else
            puts "Hello #{@names}!"
        end
    end

    # Say bye to everybody
    def say_bye
        if @names.nil?
            puts "..."
        elseif @names.respond_to?("join")

