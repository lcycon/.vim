class User
  include Mongoid::Document
  include Mongoid::Timestamps
  devise :database_authenticatable, :confirmable,
         :recoverable, :rememberable, :trackable,
         :registerable, :validatable

  # need to figure out if we should use has_many
  # or embeds_many. has_many would make querying
  # slower but would let us possibly graph out user
  # relationships based on email/phone number
  #has_many :contacts

  field :name, :email
  embeds_many :contacts
  validates_presence_of :name
  validates_uniqueness_of :name, :email, :case_sensitive => false
  attr_accessible :name, :phone, :email, :password, :password_confirmation, :remember_me

end
