#!/usr/bin/ruby

class Array
    def swap(a,b)
        self[a], self[b] = self[b], self[a]
    end

    def sort
        0.upto(self.length - 2) do |i|
            minimum = i
            (i+1).upto(self.length - 1) { |j| minimum = j if self[j] < self[minimum] }
            self.swap(i, minimum)
        end
    end
end

if __FILE__ == $0
    a = []
    puts "Please enter numbers separated by an <Enter>, followed by EOF"
    line = gets.chomp
    until line == "EOF" do
        a << line
    end
    a.sort
    a.each{|el| print el, "\n"}
end
