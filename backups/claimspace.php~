<script type="text/javascript">




function signMeUp()
{
	
	var uname = $("#usernameField").val();
	if(uname == ""){
	alert("You must enter a username");
		return;}
	

	var postStr = "<?php echo base_url() . 'main/checkUsername'; ?>";
	
	$.post(
		postStr,
		{ username: uname },
		function(data)
		{
			if(parseInt(data) == 1)
			{
				alert("That username is taken! Oh noes!");
				return;
			}
			
			window.location = "<?php echo base_url() . 'main/addUser/'; ?>" + uname;
		}
	);
}




$(document).ready(function() {
	
	$("#submit").click(function() { signMeUp(); });
	
	
	$("#usernameField").focus(function() {
$("#usernameField").val(''); 
$("#usernameField").css("color","#555"); 
});


});






	
</script>





