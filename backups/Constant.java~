/**
 * Class to represent an Constant statement in an AST.
 *
 * @author Luke Cycon -- cs12fhr
 */
public class Constant extends ASTNode{

    // The constant itself parsed to double form
    private double pValue;

    private Constant(double d){
        pValue = d;
    }

    /**
     * Evaluate this constant.
     *
     * @param symtab The variable mapping table
     *
     * @return The double value of the constant
     */
    public double eval(java.util.Map<java.lang.String,java.lang.Double> symtab){
        return pValue;
    }

    /**
     * Parse a string into a Constant
     *
     * @param s The string to parse
     *
     * @return The Constant object representing this double value
     */
    public static Constant parse(java.lang.String s){
        double ret;
        try{
            ret = Double.parseDouble(s);
        }catch(Exception e){
            return null;
        }
        return new Constant(ret);
    }

}
