<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');

class Welcome extends CI_Controller {

	/**
	 * Index Page for this controller.
	 *
	 * Maps to the following URL
	 * 		http://example.com/index.php/welcome
	 *	- or -
	 * 		http://example.com/index.php/welcome/index
	 *	- or -
	 * Since this controller is set as the default controller in
	 * config/routes.php, it's displayed at http://example.com/
	 *
	 * So any other public methods not prefixed with an underscore will
	 * map to /index.php/welcome/<method_name>
	 * @see http://codeigniter.com/user_guide/general/urls.html
	 */
	public function index()
	{
		if(!$this->facebook->is_logged_in()){
			$this->facebook->set_redirect_uri('http://superego.me/new/welcome/auth/');
			#echo "<a href=\"" . $this->facebook->login_url() . "\">Login!</a>";
            $this->load->views('login');
		} else {
		  header('Location:http://superego.me/new/welcome/fuck/');
		}
	}

	public function auth(){
		$error = $this->input->get('error_reason');

		if(!$error && $this->facebook->is_logged_in()){
			header('Location:http://superego.me/new/welcome/fuck/');
		} else {
			echo "You failed to login!";
		}
	}

	public function fuck(){
		$fuckme = $this->facebook->call('get', 'me/photos', array('limit' => '500'));
		foreach ($fuckme->data as $pic){
			echo "<img src=\"" . $pic->source . "\" />";
		}
	}
}

/* End of file welcome.php */
/* Location: ./application/controllers/welcome.php */
